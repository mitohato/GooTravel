<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".spot.select.radar.ui.RadarFragment">

    <data>
        <variable name="viewmodel" type="com.ict.mito.gootravel.spot.select.radar.ui.RadarViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:id="@+id/wifi_spot"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="250dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/wifi_spot"/>

        <Button
                android:id="@+id/food_spot"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="150dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/food_spot"/>

        <Button
                android:id="@+id/shop_spot"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="400dp"
                android:layout_marginEnd="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/shop_spot"/>

        <ImageView
                android:id="@+id/my_location"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_my_location_48dp"
                android:contentDescription="@string/my_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
                android:id="@+id/oval1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/oval"
                android:contentDescription="@string/radar_oval"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
                android:id="@+id/oval2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/oval2"
                android:contentDescription="@string/radar_oval"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
                android:id="@+id/oval3"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/oval3"
                android:contentDescription="@string/radar_oval"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
                android:id="@+id/oval4"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:src="@drawable/oval4"
                android:contentDescription="@string/radar_oval"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
