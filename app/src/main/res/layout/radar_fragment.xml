<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".spot.select.radar.ui.RadarFragment">

    <data>
        <variable name="viewmodel" type="com.ict.mito.gootravel.spot.select.radar.ui.RadarViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:id="@+id/wifi_spot"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/wifi_spot"/>

        <Button
                android:id="@+id/button_to_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIST"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <Button
                android:id="@+id/button_to_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEARCH"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/button_to_list"/>
        <Button
                android:id="@+id/button_to_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTER"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/button_to_search"/>
        <Button
                android:id="@+id/button_to_manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MANUAL"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/button_to_register"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
