<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".spot.register.ui.RegisterFragment">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content">
        <TextView
                android:id="@+id/NameView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="NAME"
                android:textSize="12pt"
                app:layout_constraintBottom_toTopOf="@id/NameInput"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"/>

        <EditText
                android:id="@+id/NameInput"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"/>

        <Button
                android:id="@+id/SignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGNIN"
                android:textSize="12pt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />


        <EditText
                android:id="@+id/MemoInput"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/NameInput"
                android:layout_marginTop="200dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"/>

        <TextView
                android:id="@+id/MemoView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEMO"
                android:textSize="12pt"
                app:layout_constraintBottom_toTopOf="@id/MemoInput"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"/>

        <Button
                android:id="@+id/ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IMAGE BUTTON"
                android:textSize="12pt"
                app:layout_constraintTop_toTopOf="@id/NameInput"
                android:layout_marginTop="70dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"/>

        <ImageView
                android:id="@+id/ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textView"
                android:layout_marginBottom="50dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"/>

        <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/MemoInput"
                android:layout_marginTop="80dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:text="IMAGE VIEW"
                android:textSize="12pt" />

        <Button
                android:id="@+id/Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIME"
                android:textSize="12pt"
                app:layout_constraintTop_toBottomOf="@id/ImageButton"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="20dp"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>
