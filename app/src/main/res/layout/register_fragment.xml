<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/NameView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:text="NAME"
            android:textSize="12pt"
            app:layout_constraintBottom_toTopOf="@id/NameInput"
            app:layout_constraintStart_toStartOf="parent" />

    <EditText
            android:id="@+id/NameInput"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/SignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGNIN"
            android:textSize="12pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    <EditText
            android:id="@+id/MemoInput"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/NameInput" />

    <TextView
            android:id="@+id/MemoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="MEMO"
            android:textSize="12pt"
            app:layout_constraintBottom_toTopOf="@id/MemoInput"
            app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
            android:id="@+id/ImageInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/photo_image"
            android:textSize="12pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TimePicker" />

    <TextView
            android:id="@+id/imageInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="38dp"
            android:background="#F9F9F9"
            android:text="Add image"
            android:textColor="#B3B3B3"
            android:textSize="12pt"
            app:layout_constraintStart_toEndOf="@id/ImageInput"
            app:layout_constraintTop_toBottomOf="@id/alertInput" />

    <TextView
            android:id="@+id/alertInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:background="#F9F9F9"
            android:text="Add notification timer"
            android:textColor="#B3B3B3"
            android:textSize="12pt"
            app:layout_constraintStart_toEndOf="@id/TimePicker"
            app:layout_constraintTop_toBottomOf="@id/NameInput" />


    <ImageView
            android:id="@+id/ViewImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView" />

    <TextView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="80dp"
            android:text="IMAGE VIEW"
            android:textSize="12pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/MemoInput" />

    <ImageButton
            android:id="@+id/TimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/alert_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/NameInput" />

</androidx.constraintlayout.widget.ConstraintLayout>


